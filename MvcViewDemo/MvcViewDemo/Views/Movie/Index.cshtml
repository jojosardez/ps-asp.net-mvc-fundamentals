@using MvcContrib.UI.Pager
@model MvcContrib.Pagination.IPagination<MvcViewDemo.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>ReleaseDate</th>
        <th>ImageUrl</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        Html.RenderPartial("MovieRecord", item);
    }

</table>

<br/>

@{ Html.Pager(Model);}
